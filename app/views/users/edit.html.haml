.container.mt-4
  %h1.mb-4.pb-2.border-bottom.border-3.border-dark= "Edit Account"
  .row.justify-content-between
    .col-md-5
      = render 'shared/errors', resource: @user
      = form_for(@user) do |f|
        .mb-3
          = f.label :username, class: "form-label"
          = f.text_field :username, class: "form-control mb-3"
          = f.label :email, class: "form-label"
          = f.text_field :email, class: "form-control mb-3"
          = f.label :password, class: "form-label"
          = f.text_field :password, class: "form-control mb-3", type: "password"
          = f.submit "Update", class: "btn btn-primary"
    .col-md-5
      = image_tag "compass.png", alt: "compass", class: "img-fluid"
