.container
  .row
    .col-md-5
      %h2.text-center.my-3= "Edit My Account"
      = render 'shared/errors', resource: @user
      = form_for(@user) do |f|
        .mb-3
          = f.label :username, class: "form-label"
          = f.text_field :username, class: "form-control mb-3"
          = f.label :email, class: "form-label"
          = f.text_field :email, class: "form-control mb-3"
          = f.label :password, class: "form-label"
          = f.text_field :password, class: "form-control mb-3"
          = f.submit "Update", class: "btn btn-primary"
