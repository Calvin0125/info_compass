.container.my-4
  %h1.mb-4.pb-2.border-bottom.border-3.border-dark= "Create Account"
  .row.justify-content-between
    .col-md-5
      = render 'shared/errors', resource: @user
      = form_for @user do |f|
        .mb-3
          = f.label :email, "Email", class: "form-label"
          = f.text_field :email, class: "form-control", type: "email"
        .mb-3
          = f.label :username, "Username", class: "form-label"
          = f.text_field :username, class: "form-control"
        .mb-3
          = f.label :time_zone, "Time Zone", class: "form-label"
          = f.time_zone_select :time_zone, nil, {}, class: "form-select mb-3"
        .mb-3
          = f.label :password, "Password", class: "form-label"
          = f.text_field :password, class: "form-control", type: "password"
        = f.submit "Create Account", class: "btn btn-primary"
    .col-md-5
      = image_tag "compass.png", alt: "compass", class: "img-fluid"
= render 'shared/info_modal_main'    
